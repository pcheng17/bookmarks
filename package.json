{
  "name": "bookmarks",
  "version": "1.0.0",
  "description": "Minimal bookmark app for Cloudflare",
  "main": "worker.js",
  "scripts": {
    "start": "node server.js",
    "dev": "wrangler dev",
    "dev:staging": "wrangler dev --env staging",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:create": "wrangler d1 create bookmarks-db",
    "db:create:staging": "wrangler d1 create bookmarks-db-staging",
    "db:migrate": "wrangler d1 execute bookmarks-db --file=schema.sql --remote",
    "db:migrate:staging": "wrangler d1 execute bookmarks-db-staging --file=schema.sql --remote",
    "r2:create": "wrangler r2 bucket create bookmarks-snapshots",
    "r2:create:staging": "wrangler r2 bucket create bookmarks-snapshots-staging"
  },
  "devDependencies": {
    "wrangler": "^4.34.0"
  }
}
